<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDBBCB"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="716dp"
        android:layout_height="152dp"
        android:background="#F1F1F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageArea"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="51dp"
            android:layout_height="36dp"
            android:text="記録"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_marginBottom="8dp"
            android:text="グラフ"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="205dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="89dp"
            android:layout_height="26dp"
            android:layout_marginBottom="20dp"
            android:text="貯金"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="354dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="グループ"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="483dp"
            tools:layout_editor_absoluteY="103dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="73dp"
            android:layout_height="33dp"
            android:layout_marginBottom="16dp"
            android:text="ブログ"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="611dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="73dp"
            android:layout_height="67dp"
            android:background="#00F3F3F3"
            app:srcCompat="@mipmap/img3"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="23dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="124dp"
            android:layout_height="99dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/img1"
            tools:layout_editor_absoluteX="319dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="109dp"
            android:layout_height="86dp"
            app:srcCompat="@mipmap/img6"
            tools:layout_editor_absoluteX="591dp"
            tools:layout_editor_absoluteY="20dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="104dp"
            android:layout_height="286dp"
            app:srcCompat="@mipmap/img2"
            tools:layout_editor_absoluteX="471dp"
            tools:layout_editor_absoluteY="-83dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="82dp"
            android:layout_height="73dp"
            app:srcCompat="@mipmap/img5"
            tools:layout_editor_absoluteX="187dp"
            tools:layout_editor_absoluteY="29dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageArea"
            android:layout_width="718dp"
            android:layout_height="741dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/img7" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv.1"
            android:textColor="#FDFCFC"
            android:textSize="180px"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="目標貯金額"
            android:textSize="80px"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.865"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="現在の貯金額"
            android:textSize="80px"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="437dp"
            tools:layout_editor_absoluteY="152dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>